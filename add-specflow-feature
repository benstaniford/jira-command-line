#!/usr/bin/python3

import re
import sys

def parse_feature_file(file_path):
    # Regular expressions to match the Scenario name and Jira test ID tags
    scenario_regex = re.compile(r'^\s*Scenario(?: Outline)?:\s*(.*)')
    jira_tag_regex = re.compile(r'@\b(EPM-\d+)\b')
    scenarios = []

    with open(file_path, 'r', encoding='utf-8') as file:
        current_tags = []
        for line in file:
            # Check for Jira tags
            tag_match = jira_tag_regex.findall(line)
            if tag_match:
                current_tags.extend(tag_match)

            # Check for Scenario names
            scenario_match = scenario_regex.match(line)
            if scenario_match:
                current_scenario = scenario_match.group(1).strip()
                if current_scenario is not None:
                    scenarios.append((current_scenario, current_tags))
                
                current_tags = []
    
    return scenarios

def print_scenario_details(scenarios):
    print("Scenarios found in the feature file:")
    for name, tags in scenarios:
        if tags:
            tags_str = ", ".join(tags)
            print(f"- {name} (Tags: {tags_str})")
        else:
            print(f"- {name} (Warning: Missing Jira test ID)")

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: python parse_feature.py <path_to_feature_file>")
        sys.exit(1)
    
    feature_file_path = sys.argv[1]
    scenarios = parse_feature_file(feature_file_path)
    print_scenario_details(scenarios)
