#!/usr/bin/python3

import re
import sys

def parse_feature_file(file_path):
    # Regular expression to match the Scenario name
    scenario_regex = re.compile(r'^\s*Scenario(?: Outline)?:\s*(.*)')
    
    scenario_names = []
    
    with open(file_path, 'r', encoding='utf-8') as file:
        for line in file:
            match = scenario_regex.match(line)
            if match:
                scenario_names.append(match.group(1).strip())
    
    return scenario_names

def print_scenario_names(scenario_names):
    print("Scenarios found in the feature file:")
    for name in scenario_names:
        print(f"- {name}")

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: python parse_feature.py <path_to_feature_file>")
        sys.exit(1)
    
    feature_file_path = sys.argv[1]
    scenario_names = parse_feature_file(feature_file_path)
    print_scenario_names(scenario_names)

