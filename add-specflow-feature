#!/usr/bin/python3

import re
import sys
import random
import os

def generate_jira_tag():
    return f"EPM-{random.randint(1000, 9999)}"

def parse_and_edit_feature_file(file_path):
    scenario_regex = re.compile(r'^\s*Scenario(?: Outline)?:\s*(.*)')
    jira_tag_regex = re.compile(r'@\b(EPM-\d+)\b')
    scenarios = []
    file_lines = []

    with open(file_path, 'r', encoding='utf-8') as file:
        all_lines = file.readlines()

    current_tags = []
    current_line = -1 
    for line in all_lines:
        current_line += 1
        file_lines.append(line)

        # Check for Jira tags
        tag_match = jira_tag_regex.findall(line)
        if tag_match:
            current_tags.extend(tag_match)

        # Check for Scenario names
        scenario_match = scenario_regex.match(line)
        if scenario_match:
            current_scenario = scenario_match.group(1).strip()
            if current_scenario is not None:
                if not current_tags:
                    new_tag = generate_jira_tag()
                    scenarios.append((current_scenario, [new_tag]))

                    # Insert the new tag line before the current scenario line
                    file_lines[-1] = f"@{new_tag}\n" + file_lines[-1]
                    # Write the scenario with the new tag to a file
                    print (f"Writing scenario to {new_tag}.txt")

                    # Keep reading lines into current_scenario_lines until we reach a blank line
                    current_scenario_lines = []
                    for i in range(current_line, len(all_lines)):
                        line = all_lines[i]
                        current_scenario_lines.append(line)
                        if line.strip() == "":
                            break
                    print (current_scenario_lines)

                    with open(f"{new_tag}.txt", 'w', encoding='utf-8') as scenario_file:
                        scenario_file.writelines(current_scenario_lines)
                else:
                    scenarios.append((current_scenario, current_tags))
            
            current_tags = []

    # Write the updated lines back to the file if any changes were made
    with open(file_path, 'w', encoding='utf-8') as file:
        file.writelines(file_lines)
    
    return scenarios

def print_scenario_details(scenarios):
    print("Scenarios found in the feature file:")
    for name, tags in scenarios:
        if tags:
            tags_str = ", ".join(tags)
            print(f"- {name} (Tags: {tags_str})")
        else:
            print(f"- {name} (Warning: Missing Jira test ID)")

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: python add-specflow-feature <path_to_feature_file>")
        sys.exit(1)
    
    feature_file_path = sys.argv[1]
    scenarios = parse_and_edit_feature_file(feature_file_path)
    print_scenario_details(scenarios)

