#!/usr/bin/python

from MyXray import MyXray
xray = MyXray()

# Create the issue
xray.initialize()
issue = xray.create_test_case('Test issue', 'This is a test issue')
print(f"Created {issue.key}")

# Ask the user if they want to delete the issue
print(f"Delete {issue.key}?")
delete = input("y/n: ")
if delete == "y":
    issue.delete(deleteSubtasks=True)
